<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Add Profile" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@AddProfileWindow.css" />
            </stylesheets>
            <HBox alignment="CENTER" prefHeight="722.0" prefWidth="442.0">
                <children>
                    <AnchorPane prefHeight="546.0" prefWidth="450.0" style="-fx-background-color: derive(#1d1d1d, 20%)derive(#1d1d1d, 20%);">
                        <children>
                            <TextField fx:id="nameInput" layoutX="114.0" layoutY="152.0" prefHeight="37.0" prefWidth="230.0" promptText="Enter name..." />
                     <TextField fx:id="phoneNumberInput" layoutX="114.0" layoutY="210.0" prefHeight="37.0" prefWidth="230.0" promptText="Enter phone number..." />
                     <TextField fx:id="emailInput" layoutX="114.0" layoutY="263.0" prefHeight="37.0" prefWidth="230.0" promptText="Enter email..." />
                     <TextField fx:id="addressInput" layoutX="114.0" layoutY="322.0" prefHeight="37.0" prefWidth="230.0" promptText="Enter address..." />
                     <TextField fx:id="tagInput" layoutX="114.0" layoutY="379.0" prefHeight="37.0" prefWidth="230.0" promptText="Enter tag (seperated by ', ')" />
                     <StackPane fx:id="resultDisplayPlaceholder" layoutX="37.0" layoutY="510.0" prefHeight="162.0" prefWidth="368.0" />
                            <Button layoutX="117.0" layoutY="446.0" mnemonicParsing="false" onAction="#handleAddProfile" text="Save" />
                            <Button layoutX="235.0" layoutY="446.0" mnemonicParsing="false" onAction="#handleClose" text="Cancel" />
                     <Circle fill="WHITE" layoutX="229.0" layoutY="75.0" radius="53.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" />
                     <Circle fill="#6b88a4" layoutX="229.0" layoutY="89.0" radius="32.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" />
                     <Circle fill="#cad0d7" layoutX="229.0" layoutY="49.0" radius="20.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" />
                        </children>
                    </AnchorPane>
                </children>
            </HBox>
        </Scene>
    </scene>
</fx:root>
