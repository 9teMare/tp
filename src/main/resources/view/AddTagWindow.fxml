<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Create tag" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
   <scene>
      <Scene>
         <stylesheets>
            <URL value="@AddTagWindow.css" />
         </stylesheets>
         <HBox alignment="CENTER" prefHeight="266.0" prefWidth="306.0">
            <children>
               <AnchorPane prefHeight="266.0" prefWidth="308.0" style="-fx-background-color: derive(#1d1d1d, 20%)derive(#1d1d1d, 20%);">
                  <children>
                     <TextField fx:id="tagNameInput" layoutX="57.0" layoutY="70.0" prefHeight="34.0" prefWidth="197.0" promptText="Enter tag name..." />
                     <StackPane fx:id="resultDisplayPlaceholder" layoutX="5.0" layoutY="114.0" maxHeight="100" minHeight="34.0" prefHeight="61.0" prefWidth="301.0" HBox.hgrow="NEVER">
                     </StackPane>
                     <Button layoutX="57.0" layoutY="185.0" mnemonicParsing="false" onAction="#addTagHandler" text="Done" />
                     <Button layoutX="162.0" layoutY="185.0" mnemonicParsing="false" onAction="#handleClose" text="Cancel" />
                  </children>
               </AnchorPane>
            </children>
         </HBox>
      </Scene>
   </scene>
</fx:root>
